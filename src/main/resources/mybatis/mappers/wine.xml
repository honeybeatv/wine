<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="WineXml">

	<!-- 와인리스트 불러오기 -->
	<select id="selectList" resultType="wine">
		SELECT WINE_NO,
			   WINE_NAME,
			   WINE_TYPE,
			   WINE_COUNTRY,
			   REG_DATE
		FROM   WINE
		ORDER BY REG_DATE DESC

	</select>

	<!-- 와인 추가 -->
	<insert id="insert" parameterType="com.javaex.vo.WineVo">
		<![CDATA[
			insert into wine
			values (seq_wine_no.nextval, #{wineName}, #{wineType}, #{wineCountry}, sysdate)
		]]>
	</insert>
	
	<!-- 와인 삭제 -->
	<delete id="delete" parameterType="com.javaex.vo.WineVo"> 
		delete from wine where wine_no = #{wineNo}
	</delete>
</mapper>